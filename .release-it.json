{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: Release ${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN",
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}